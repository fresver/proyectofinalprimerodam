<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #77b1cd;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.miproyecto.proyectofinal.PantallaDeInicioController">
	<children>
		<Label text="Bienvenido al juego" textFill="BLUE">
         <font>
            <Font name="Arial Bold" size="36.0" />
         </font>
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor></Label>
		<Button fx:id="jugar" onAction="#jugar" style="-fx-background-color: #c0c0c0; -fx-border-color: black; -fx-border-radius: 5%;" text="Jugar">
         <font>
            <Font name="Arial Bold" size="18.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
		<Button fx:id="salir" onAction="#salir" style="-fx-background-color: #c0c0c0; -fx-border-color: black; -fx-border-radius: 5%;" text="Salir">
         <font>
            <Font name="Arial Bold" size="18.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
      <ImageView fitHeight="240.0" fitWidth="275.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../img/gatomilitar.jpg" />
         </image>
      </ImageView>
	</children>
	<padding>
		<Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
	</padding>
</VBox>
